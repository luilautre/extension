{
  "manifest_version": 2,
  "name": "Devoirs perso ENT",
  "version": "1.0",
  "description": "Ajoute des devoirs personnels depuis un XML.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["*://*.mon-ent-occitanie.fr/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}
